<Application x:Class="ImageRedef.Fluent.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ImageRedef.Fluent">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- Common Styles / Templates -->
                <ResourceDictionary Source="Resources/Common.Styles.xaml" />
                <ResourceDictionary Source="Resources/Common.Templates.xaml" />

                <!-- Resources -->
                <ResourceDictionary Source="Resources/Custom.Controls.xaml" />
                <ResourceDictionary Source="Resources/Custom.Styles.xaml" />
                
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
